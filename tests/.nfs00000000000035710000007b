#!/bin/bash
# Usage: ./test_frequency

set -e

test_dir=$(dirname "$0")
. "${test_dir}/common.sh"
cd "${test_dir}/.." || exit 1

program=encode_bits

assert_eq '\n' '' '00001010'
NONL=y assert_eq 'A' 'A' '01000001'
assert_eq 'line breaks' 'We should have a line break at 70 chars' \
  '0101011101100101001000000111001101101000011011110111010101101100011001
0000100000011010000110000101110110011001010010000001100001001000000110
1100011010010110111001100101001000000110001001110010011001010110000101
1010110010000001100001011101000010000000110111001100000010000001100011
0110100001100001011100100111001100001010'
NONL=y assert_eq 'Non-ascii' $'\x80\x81\xFF' '100000001000000111111111'

results
